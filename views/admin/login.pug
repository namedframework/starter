doctype html
html
  head
    meta(charset="utf-8") 
    meta(content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no", name="viewport") 
    link(rel="stylesheet", href="/plugins/font-awesome/css/font-awesome.min.css")
    link(rel="stylesheet", href="/adminlte3/css/adminlte.min.css") 
    link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic") 
    
    block head
      title Named Framework :: Admin Panel  
      
  body.hold-transition.login-page
    .login-box
      .login-logo
        a
          b Named 
          | Framework 
      .login-box-body
        include ../parts/message
        p.login-box-msg Sign in to start your session 
        
        form(method="POST", action="/login/admin")
          input(type="hidden", name="_csrf", value=_csrf) 
          .form-group.has-feedback
            input.form-control(type="username", name="username", placeholder="Username", required) 
          .form-group.has-feedback
            input.form-control(type="password", name="password", placeholder="Password", required) 
            
          if Framework.config.recaptcha && Framework.app.get("env") === "production"
            .form-group
              div.g-recaptcha(data-sitekey=Framework.config.recaptcha.sitekey) 
            
          .row
            .col-lg-12
              button.btn.btn-primary.btn-block.btn-flat(type="submit") Sign In

    if Framework.config.recaptcha && Framework.app.get("env") === "production"
      script(src='https://www.google.com/recaptcha/api.js') 
